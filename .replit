modules = ["python-3.12", "web", "nodejs-20", "nix"]
[run]
command = "python3 run.py"

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libxcrypt", "pkg-config", "qhull", "tcl", "tk"]

[deployment]
run = ["sh", "-c", "REPL_DEPLOYMENT=true python3 backend/app.py"]
deploymentTarget = "cloudrun"

[env]
PYTHONUNBUFFERED = "1"

[[ports]]
localPort = 8000
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 3000
externalPort = 3000
exposeLocalhost = true